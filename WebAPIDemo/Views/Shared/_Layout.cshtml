<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/style")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar-fixed-top" style="padding-top: 50px;">
        <div class="container">
            <ul class="nav nav-tabs">
                <li id="analytics-tab" class="nav-item">@Html.ActionLink("CMoG CMX Analytics", "Index", "Home", new { area = "" }, new { @class = ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "nav-link active" : "nav-link" })</li>
                <li id="documentation-tab" class="nav-item">@Html.ActionLink("API", "Index", "Help", new { area = "" }, new { @class = ViewContext.RouteData.Values["Controller"].ToString() == "Help" ? "nav-link active" : "nav-link" })</li>
            </ul>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery-ui")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
